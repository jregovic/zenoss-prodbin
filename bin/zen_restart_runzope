#!/usr/bin/env bash
#
# zen_restart_runzope  shell script restarts runzope when its memory leaks too much.
#
##############################################################################
#
# Copyright (C) Zenoss, Inc. 2007, all rights reserved.
#
# This content is made available according to terms specified in
# License.zenoss under the directory where your Zenoss product is installed.
#
##############################################################################

# set the max to 2G
(( max_m=2*1024*1024 ))

# 10 minutes
poll_t=600

# runzope pid
pid_f=/opt/zenoss/var/Z2.pid

while sleep $poll_t
do
   if [[ -f $pid_f ]]
   then
       pid=$(cat $pid_f)
       (( vsz = $(ps -ho vsz $pid) ))

       # if vsz is too big, restart zope
       (( vsz > max_m )) && kill -HUP $pid
   fi
done
